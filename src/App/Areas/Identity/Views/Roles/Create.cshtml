@model App.Areas.Identity.ViewModels.RoleViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Nova Role";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-area="Identity" asp-controller="Roles" asp-action="Create">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" maxlength="100" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a class="btn btn-info" asp-action="Index">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

